@using Demo.Areas.LocalApi.Models
@model List<ArticleApi>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@if (Model != null)
{

    <div class="table-responsive">
        <table class="table table-bordered">
            <tr>
                <th class="col-1">#ID</th>
                <th class="col-1">Kategori Id</th>
                <th class="col-1">Başlık</th>
                <th class="col">İçerik</th>
                <th class="col-1">Tarih</th>
                <th class="col-1">Durum (status)</th>
                <th class="col-1">Sil</th>
                <th class="col-1">Güncelle</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.categoryid</td>
                    <td>@item.title</td>
                    <td style="max-width:900px; display: inline-block; word-break: break-word; table-layout:fixed;">
                        @item.content
                    </td>
                    <td>@item.creationdate</td>
                    <td>@item.status</td>
                    <td><a href="/LocalApi/ArticleApi/DeleteArticle/@item.id" class="btn btn-outline-danger">Sil</a></td>
                    <td><a href="/LocalApi/ArticleApi/UpdateArticle/@item.id" class="btn btn-outline-success">Güncelle</a></td>
                </tr>
            }
        </table>
    </div>
    <a href="/LocalApi/ArticleApi/AddArticle" class="btn btn-outline-primary">Yeni Makale Ekle</a>
    <br />
}
else
{
    <h2>Hata :(</h2>
    <hr />
    @ViewBag.ErrorMessage

}






