@using Entities.Concrete
@using X.PagedList
@using X.PagedList.Mvc.Core

@model IPagedList<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Index</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Pasif</th>
        <th>Aktif</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var category in Model)
    {

        <tr>

            <td>@category.Id</td>
            <td>@category.Name</td>
            <td><a href="Category/Delete/@category.Id" class="btn btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz');">Pasif Yap</a></td>
            <td><a href="#" class="btn btn-primary">Aktive Et</a></td>
            <td><a href="#" class="btn btn-warning">Düzenle</a></td>

        </tr>
    }
</table>
<a href="Category/Add" class="btn btn-info">Yeni Kategori</a>
<br />
@Html.PagedListPager((IPagedList)Model,page=> Url.Action("Index",new{page}))