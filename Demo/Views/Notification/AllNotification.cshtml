@using Entities.Concrete
@model List<Notification>
@{
    ViewData["Title"] = "AllNotification";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Bildirimler</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Bildirim</th>
        <th>Tarih</th>
    </tr>
    @foreach (var notification in Model)
    {
        <tr>
            <td>@notification.Id</td>
            <td>@notification.Details</td>
            <td>@ViewData[$"{notification.Id}"]</td>
        </tr>
    }
</table>
<hr />

<form method="post" action="TestAddNotification">


    <div>
        <label>Bildirim gir test alanı</label>
        <input class="text-small" type="text" name="details" />
    </div>
    <button type="submit" >Gönder</button>
</form>

