@model Demo.Models.AddProfileImage
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
<div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Profil Düzenleme</h4>
                <br>
                @Html.HiddenFor(a=> a.Id, new{@class="form-control"})
                @*                <form class="forms-sample">
                *@                    <div class="form-group">
                    <label for="exampleInputName1">Ad</label>
                    @Html.TextBoxFor(a=>a.FirstName, new{@class="form-control"})
