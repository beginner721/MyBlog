@model UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/inspinia-gh-pages/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/animate.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">Blog</h1>

            </div>
            <h3>Kayıt ol</h3>
            <p>Create account to see it in action.</p>
            <form class="m-t" role="form" asp-action="Index">
                <div class="text-danger" asp-validation-summary="ModelOnly">
                </div>

                <div class="form-group">
                    <span asp-validation-for="NameSurname" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="NameSurname" placeholder="Ad soyad" required="">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <input type="email" class="form-control" asp-for="Email" placeholder="Eposta" required="">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Username" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Username" placeholder="Kullanıcı Adı" required="">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <input type="password" class="form-control" asp-for="Password" placeholder="Şifre" required="">
                </div>
                <div class="form-group">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Tekrar Şifre" required="">
                </div>
                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox" asp-for="CheckBox"><i></i> Agree the terms and policy </label></div>
                    <span asp-validation-for="CheckBox" class="text-danger"></span>

                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>

                <p class="text-muted text-center"><small>Zaten bir hesabın var mı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/RegisterUserController/Login">Giriş yap</a>
            </form>
            <p class="m-t"> <small>Inspinia we app framework base on Bootstrap 3 &copy; @DateTime.Now.Year</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/inspinia-gh-pages/js/jquery-3.1.1.min.js"></script>
    <script src="~/inspinia-gh-pages/js/popper.min.js"></script>
    <script src="~/inspinia-gh-pages/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/inspinia-gh-pages/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>

</html>
