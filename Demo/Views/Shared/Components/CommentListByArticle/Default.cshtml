@model IEnumerable<Entities.Concrete.Comment>

<div class="comment-top">
    <h2>Yorumlar</h2>

    @if (Model.Count() == 0)
    {
        <h4>Henüz bir yorum yok.</h4>
        <br />
    }
    else
    {
        @foreach (var comment in Model)
        {

            <div class="media">
                <img src="~/BlogTheme/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@comment.Username</h5>
                    <p>
                        @comment.Content
                    </p>
                </div>
            </div>
            <br />
        }
    }



</div>