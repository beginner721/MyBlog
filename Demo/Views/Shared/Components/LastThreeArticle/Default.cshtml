@using Entities.Concrete
@model IOrderedEnumerable<Article>

@foreach (var article in Model)
{
    <div class="blog-grids row mb-3">
        <div class="col-md-5 blog-grid-left">
            <a href="/Article/ReadMore/@article.Id">
                <img src="@article.Image" class="card-img-top img-fluid" alt="">
            </a>
        </div>

        <div class="col-md-7 blog-grid-right">

            <h5>
                <a href="/Article/ReadMore/@article.Id">@article.Title</a>
            </h5>
            <div class="sub-meta">
                <span>
                    <i class="far fa-clock"></i> 20 Jan, 2018
                </span>
            </div>
        </div>

    </div>
}