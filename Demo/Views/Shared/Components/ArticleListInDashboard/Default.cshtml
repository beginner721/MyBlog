@using Entities.Concrete
@model List<Article>

<div class="row">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Son Makaleler</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th> # </th>
                                    <th> Başlık </th>
                                    <th> Kategori </th>
                                    <th> Tarih </th>
                                    <th> Detaylar </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var article in Model)
                               {
                                  
                                <tr>
                                    <td>
                                        <img src="@article.Image" class="mr-2" alt="image">
                                    </td>
                                    <td>@article.Title</td>
                                    <td>
                                        <label class="badge badge-gradient-success">@article.Category.Name </label>
                                    </td>
                                    <td> @(((DateTime)article.CreateDate).ToString("dd-MM-yyyy"))</td>
                                    <td><a href="/Article/ReadMore/@article.Id" class="btn-sm btn-dark">Detaylar</a></td>
                                </tr>
                               }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>